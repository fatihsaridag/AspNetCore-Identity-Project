@model IdentityProject.ViewModels.RoleViewModel

@{
    ViewData["Title"] = "RoleCreate";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container mt-4">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-4">
            <form asp-action="RoleCreate">
                    <h3 class="text text-center text-outline-primary">Rol Oluştur</h3>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <input asp-for="Name" class="form-control" placeholder="Role İsmi" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group text-center mt-2">
                        <input type="submit" value="Oluştur" class="btn btn-outline-primary form-control" />
                    </div>
            </form>
        </div>
        <div class="col-md-5"></div>

    </div>

</div>


