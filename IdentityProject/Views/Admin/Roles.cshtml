@using IdentityProject.Models
@model List<AppRole>



@{
    ViewData["Title"] = "Roles";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-2">
            <h3 class="text text-primary">Rol Oluştur</h3>
            <a asp-controller="Admin" asp-action="RoleCreate" class="btn btn-outline-info"> Rol Oluştur</a>
        </div>
        <div class="col-md-10">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Rol İsmi</th>
                        <th>Güncelle</th>
                        <th>Sil</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                         <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td><a asp-controller="Admin" asp-action="RoleUpdate" asp-route-id="@item.Id" class="btn btn-outline-info">Güncelle</a></td>
                            <td><a asp-controller="Admin" asp-action="RoleDelete" asp-route-id="@item.Id" class="btn btn-outline-danger">Sil</a></td>
                        </tr>
                    }
                 
                </tbody>
            </table>
        </div>
    </div>
</div>

