@model IdentityProject.ViewModels.PasswordResetViewModel

@{
    ViewData["Title"] = "ResetPasswordConfirm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (ViewBag.status == "success")
{
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <div class="alert alert-info text-center">Şifreniz başarıyla yenilenmiştir.Giriş sayfasından yeni şifreniz ile giriş yapabilirsiniz</div>
            <a class="btn btn-link" asp-action="SignIn" asp-controller="Home">Giriş için tıklayınız</a>
        </div>
        <div class="col-md-3"></div>
    </div>
}
else
{
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <h1 class="text-center text-info">Şifre Yenileme Formu</h1>
            <form method="post" asp-action="ResetPasswordConfirm">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="PasswordNew" class="control-label"></label>
                    <input asp-for="PasswordNew" class="form-control" />
                    <span asp-validation-for="PasswordNew" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <button type="submit" class="btn btn-outline-primary form-control">Kaydet</button>
                </div>
            </form>
        </div>
        <div class="col-md-4"></div>

    </div>

}

