@model UserViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_MemberLayout.cshtml";
}


<div class="container mt-3">
    <div class="row">
        <div class="col-sm-2">
            <img style="width:100%; height:100%;" src="@Model.Picture" >
        </div>
        <div class="col-sm-10">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th> Adı </th>
                        <th> Soyadı </th>
                        <th>Kullanıcı Adı</th>
                        <th> Email </th>
                        <th> Doğum Tarihi </th>
                    </tr>
                </thead>
                <tbody>
                        <tr>
                            <td>@Model.FirstName</td>
                            <td>@Model.LastName</td>
                            <td>@Model.UserName</td>
                            <td>@Model.Email</td>
                            <td>@Model.BirthDay.ToShortDateString()</td>
                        </tr>
                </tbody>
            </table>
        </div>
        <div class="col-md-4">
        </div>
    </div>

</div>